<h1><%= title %></h1>
<p>Welcome to <%= title %></p>
<% if (hasDropbox && hasRunKeeper) { %>
  <p>Looks like you're logged in. Press sync to, er, sync: <form action="/api/runboxer/job" method="POST"><button type="submit">Sync</button></form></p>
<% } %>
<hr>
<% if (!hasRunKeeper) { %>
  <p><a href="/auth/runkeeper">Add RunKeeper</a></p>
<% } else { %>
  <p>Got RunKeeper user <%=runkeeper.profile.name%> from <%=runkeeper.profile.location%>. <a href="/api/runkeeper/profile">Test RunKeeper</a>.</p>
<% } %>
<% if (!hasDropbox) { %>
  <p><a href="/auth/dropbox">Add Dropbox</a></p>
<% } else { %>
  <style>
    form, button {
      display: inline;
      float: none;
      clear: none;
    }
  </style>
  <p>Got Dropbox user <%=dropbox.user.display_name%> from <%=dropbox.user.country%>. <form action="/api/dropbox/put-test" method="POST"><button type="submit">Test Dropbox</button></form></p>
<% } %>
<hr>
<% if (hasDropbox || hasRunKeeper) { %>
  <p><a href="/logout">Log Out</a>
<% } %>
